[Unit]
Description=Copilot CLI WebSocket Server
Documentation=https://github.com/ssfdre38/copilot-android-client
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/CopilotAndroidClient/server
ExecStart=/usr/bin/node /home/ubuntu/CopilotAndroidClient/server/server.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3002

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=copilot-server

# Security
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target